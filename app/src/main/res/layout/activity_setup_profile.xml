<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:background="@drawable/background_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">
        <TextView
            android:id="@+id/register_id_banner"
            android:text="@string/setup_profile_header"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/paragraph_text"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setup_profile_header"
            android:text="@string/setup_profile_header"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/setup_profile_sub"
            android:text="@string/setup_profile_sub"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/information_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_icon"
                android:src="@color/colorDarkGray"
                android:background="@drawable/profile_shadow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <RelativeLayout
                android:id="@+id/photo_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_photo_circle"
                android:elevation="3dp"
                android:layout_alignBottom="@+id/profile_icon"
                android:layout_alignEnd="@+id/profile_icon">
                <ImageView
                    android:src="@drawable/ic_edit"
                    android:tint="@color/colorWhite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/setup_profile_continue"
            android:text="@string/setup_profile_continue"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>